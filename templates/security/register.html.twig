{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">{{ 'Register'|trans }}</div>
                    <div class="card-body">
                        <form action="{{ path('app_register') }}" method="post">
                            {{ form_start(form) }}
                            {{ form_row(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Username'} }) }}
                            {{ form_row(form.password.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'} }) }}
                            {{ form_row(form.password.second, { 'attr': {'class': 'form-control', 'placeholder': 'Confirm Password'} }) }}
                            <div class="mt-2 text-center">
                                <button type="submit" class="btn btn-primary">{{ 'Register'|trans }}</button>
                            </div>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <p>{{ 'Already have an account?'|trans }} <a href="{{ path('login') }}">{{ 'Login'|trans }}</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
